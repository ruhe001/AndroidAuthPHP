<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PembobotanActivity">

    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Bobot Harga"
        android:gravity="center"
        android:layout_gravity="center"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Bobot Harga"
        android:gravity="center"
        android:layout_gravity="center">


        <Button
            android:id="@+id/decreaseHarga"
            android:layout_width="98dp"
            android:layout_height="wrap_content"
            android:text="Decrease" />

        <TextView
            android:id="@+id/edit_harga"
            android:layout_width="62dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:inputType="number" />

        <Button
            android:id="@+id/increaseHarga"
            android:layout_width="99dp"
            android:layout_height="wrap_content"
            android:text="Increase" />
    </LinearLayout>
    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bobot Jarak"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_jarak"
        android:inputType="number"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />

    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bobot Kemudahan Akses"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_akses"
        android:inputType="number"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />

    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bobot Fasilitas"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_fasilitas"
        android:inputType="number"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        />

    <TextView
        android:textColor="@color/colorPrimary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bobot Nilai Edukasi"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_edukasi"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:inputType="number"
        />
    <Button
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:textColor="#fff"
        android:background="@drawable/btn_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="NEXT"
        android:id="@+id/button_next_pembobotan"
        />

    <TextView
        android:layout_gravity="center"
        android:textSize="10sp"
        android:gravity="center_vertical"
        android:textColor="@color/colorPrimary"
        android:layout_margin="20dp"
        android:text="Halaman ini digunakan untuk menentukan penilaian anda terhadap kriteria tempat wisata yang anda inginkan. Semakin besar angka yang anda masukkan pada kriteria menandakan bahwa kriteria tersebut akan lebih diprioritaskan dibanding kriteria lain dan sebaliknya. Hasil rekomendasi tempat wisata akan sangat bergantung dari tiap nilai kriteria yang anda masukkan."
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


</LinearLayout>